{
    "name": "upper_winds_open_meteo",
    "version": "1.4.0",
    "description": "Upper winds visualization and jump planner with Leaflet and OpenMeteo",
    "scripts": {
        "start": "vite --config vite.config.web.js",
        "dev:mobile": "vite --config vite.config.mobile.js",
        "build:web": "vite build --config vite.config.web.js",
        "build:mobile": "vite build --config vite.config.mobile.js",
        "build": "npm run build:web && npm run build:mobile",
        "predeploy": "npm run build:web",
        "deploy": "gh-pages -d dist/web"
    },
    "devDependencies": {
        "@capacitor/assets": "^3.0.5",
        "@rollup/plugin-commonjs": "^28.0.5",
        "gh-pages": "^6.3.0",
        "vite": "^6.3.5"
    },
    "dependencies": {
        "@capacitor/android": "^7.4.0",
        "@capacitor/cli": "^7.3.0",
        "@capacitor/core": "^7.3.0",
        "@capacitor/geolocation": "^7.1.2",
        "@capacitor/ios": "^7.4.0",
        "leaflet": "^1.9.4",
        "leaflet-gpx": "^2.2.0",
        "leaflet-rotatedmarker": "^0.2.0",
        "leaflet.heat": "^0.2.0",
        "luxon": "^3.6.1",
        "mgrs": "^2.1.0",
        "papaparse": "^5.5.3"
    }
}
